[Unit]
Description=StatusBoard
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/root/radar
ExecStart=/usr/bin/node /home/root/radar/index.js
Restart=always
RestartSec=10
Environment="NODE_ENV=production"
SyslogIdentifier=radar
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
