<html lang="en" class="h-full bg-background">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= config.branding.schoolName %> Admin Page
  </title>
  <link rel="icon" href="/branding/<%= config.branding.logo %>" type="image/png">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
          colors: {
            primary: '#1e3a8a',
            secondary: '#64748b',
            success: '#10b981',
            warning: '#f59e0b',
            danger: '#ef4444',
            background: '#f1f5f9',
            surface: '#ffffff',
          }
        }
      }
    }
  </script>
  <style>
    .overflow-x-auto {
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }
    .overflow-x-auto::-webkit-scrollbar {
      display: none; /* Chrome, Safari, Opera */
      width: 0;
      height: 0;
    }
  </style>
</head>

<body class="h-full bg-background">
  <nav class="bg-white shadow-sm">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 justify-between items-center">
        <div class="flex items-center gap-4">
          <img class="h-10 w-auto" src="/branding/<%= config.branding.logo %>"
            alt="<%= config.branding.schoolName %>" />
          <h1 class="text-xl font-bold text-gray-900">
            <%= config.branding.schoolName %>
          </h1>
        </div>
        <div class="flex gap-2">
          <button id="force-refresh-btn" type="button" title="Refresh Errors" aria-label="Refresh Errors" class="p-2 rounded-md bg-white text-gray-600 border border-slate-200 hover:bg-slate-50">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 10a9 9 0 0115.464-4.464M21 14a9 9 0 01-15.464 4.464" />
            </svg>
          </button>
          <a href="/"
            class="rounded-md p-2.5 text-gray-600 hover:text-primary hover:bg-blue-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-colors"
            title="Go to Status Board">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
          </a>
          <a href="/logout"
            class="rounded-md p-2.5 text-gray-600 hover:text-danger hover:bg-red-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-danger transition-colors"
            title="Logout">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15M12 9l3 3m0 0-3 3m3-3H3.75" />
            </svg>
          </a>
        </div>
      </div>
    </div>
    <!-- Progress bar -->
    <div id="progress-container" class="h-1 bg-gray-100 hidden">
      <div id="progress-bar" class="h-full bg-primary transition-all duration-300" style="width: 0%"></div>
    </div>
  </nav>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
    <div class="grid grid-cols-1 gap-x-8 gap-y-10 lg:grid-cols-3">
      <!-- Admin Settings (Column 1) -->
      <div class="lg:col-span-1">
        <div class="bg-white shadow sm:rounded-lg">
          <div class="border-b rounded-t-lg bg-gray-50 border-gray-300 px-4 py-5 sm:px-6">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Dashboard Settings</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <form action="/setup/update" method="POST" enctype="multipart/form-data" class="space-y-6">
              <div>
                <label for="username" class="block text-sm/6 font-medium text-gray-900">Username</label>
                <div class="mt-2">
                  <input id="username" type="text" name="username" required value="<%= config.adminUser.username %>"
                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" />
                </div>
              </div>

              <div>
                <label for="password" class="block text-sm/6 font-medium text-gray-900">Password</label>
                <div class="mt-2">
                  <input id="password" type="password" name="password" placeholder="Leave blank to keep current password"
                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" />
                  <p class="mt-1 text-xs text-gray-500">Only enter a new password if you want to change it</p>
                </div>
              </div>

              <div>
                <label for="schoolName" class="block text-sm/6 font-medium text-gray-900">School Name</label>
                <div class="mt-2">
                  <input id="schoolName" type="text" name="schoolName" required
                    value="<%= config.branding.schoolName %>"
                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" />
                </div>
              </div>

              <div>
                <label for="refreshInterval" class="block text-sm/6 font-medium text-gray-900">Status Check Interval (minutes)</label>
                <div class="mt-2">
                  <input id="refreshInterval" type="number" name="refreshInterval" min="1" max="60" required
                    value="<%= config.refreshIntervalMinutes %>"
                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" />
                  <p class="mt-1 text-xs text-gray-500">How often to check resource statuses (1-60 minutes)</p>
                </div>
              </div>

              <div>
                <label for="cover-photo" class="block text-sm/6 font-medium text-gray-900">School Logo</label>
                <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
                  <div class="text-center">
                    <img src="/branding/<%= config.branding.logo %>" alt="<%= config.branding.schoolName %>"
                      class="mx-auto h-10 w-auto" />
                    <div class="mt-4 flex text-sm/6 text-gray-600">
                      <label for="file"
                        class="relative cursor-pointer rounded-md bg-transparent font-semibold text-blue-400 focus-within:outline focus-within:outline-2 focus-within:outline-offset-2 focus-within:outline-indigo-600 hover:text-indigo-500">
                        <span>Upload a file</span>
                        <input id="file" type="file" name="logo" class="sr-only" />
                      </label>
                    </div>
                  </div>
                </div>

              </div>


              <div>
                <button type="submit"
                  class="flex w-full justify-center rounded-md bg-green-500 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-green-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Save
                  Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Resource Management (Column 2 & 3) -->
      <div class="lg:col-span-2">
        <div class="bg-white shadow sm:rounded-lg">
          <div class="border-b rounded-t-lg bg-gray-50 border-gray-200 px-4 py-5 sm:px-6">
            <h3 class="text-base font-semibold leading-6 text-gray-900">Resource Management</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <!-- Category List (single table) -->
            <div id="resources-container" class="space-y-8">
              <div class="mb-6">
                <h4 class="text-sm font-bold text-gray-900 mb-2">Categories</h4>
                <div class="overflow-x-auto">
                  <table class="min-w-full divide-y divide-gray-300">
                    <thead>
                      <tr>
                        <th scope="col"
                          class="py-2 pl-2 pr-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th scope="col" class="relative py-2 pl-3 pr-2 sm:pr-0">
                          <div class="flex items-center justify-end gap-2">
                            <button type="button" onclick="openAddCategoryModal()" title="Add Category" aria-label="Add Category"
                              class="p-1 text-gray-600 hover:text-green-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-600">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                              </svg>
                            </button>
                            <span class="sr-only">Actions</span>
                          </div>
                        </th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                      <% if (allCategories && allCategories.length > 0) { %>
                        <% allCategories.forEach(cat => { %>
                          <tr class="odd:bg-white even:bg-gray-50">
                            <td class="whitespace-nowrap py-2 pl-2 pr-3 text-sm text-gray-900"><%= cat %></td>
                            <td class="relative whitespace-nowrap py-2 pl-3 pr-2 text-right text-sm font-medium sm:pr-0">
                              <div class="inline-flex items-center gap-2">
                                <button type="button" onclick="updateCategory('<%= cat %>')" aria-label="Edit <%= cat %>" class="p-1 text-gray-600 hover:text-yellow-400 focus:outline-none">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                                  </svg>
                                </button>
                                <button type="button" onclick="deleteCategory('<%= cat %>')" aria-label="Delete <%= cat %>" class="p-1 text-gray-600 hover:text-red-500 focus:outline-none">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                  </svg>
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td class="py-2 pl-2 pr-3 text-sm text-gray-500" colspan="2">No categories found.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>

              <!-- All Resources (unique list) -->
              <div>
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-bold text-gray-900">Resources</h4>
                  <div class="flex items-center gap-2">
                    <input id="resource-search" type="search" placeholder="Search resources..."
                      class="rounded-md border border-gray-200 px-2 py-1 text-sm text-gray-700 placeholder:text-gray-400 focus:ring-1 focus:ring-indigo-600 focus:outline-none" />
                  </div>
                </div>
                <% 
                  const resourcesMap = {};
                  Object.entries(resources).forEach(([cat, items]) => {
                    items.forEach(resource => {
                      if (!resource || !resource.resource_name) return;
                      const key = resource.resource_name;
                      if (!resourcesMap[key]) resourcesMap[key] = { resource_name: resource.resource_name, status_page: resource.status_page, categories: [] };
                      if (!resourcesMap[key].categories.includes(cat)) resourcesMap[key].categories.push(cat);
                    });
                  });
                  const uniqueResources = Object.values(resourcesMap);
                %>
                <div class="overflow-x-auto">
                  <table id="unique-resources-table" class="min-w-full divide-y divide-gray-300">
                    <thead>
                      <tr>
                        <th scope="col" class="py-2 pl-2 pr-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status URL</th>
                        <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categories</th>
                        <th scope="col" class="relative py-2 pl-3 pr-2 sm:pr-0">
                          <div class="flex items-center justify-end gap-2">
                            <button type="button" onclick="openAddModal('')" title="Add Resource" aria-label="Add Resource"
                              class="p-1 text-gray-600 hover:text-green-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-600">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-4 h-4">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                              </svg>
                            </button>
                            <span class="sr-only">Actions</span>
                          </div>
                        </th>
                      </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200" id="resources-table-body">
                      <% if (uniqueResources.length > 0) { %>
                        <% uniqueResources.forEach(resource => { %>
                          <tr class="resource-row odd:bg-white even:bg-gray-50">
                            <td class="whitespace-nowrap py-2 pl-2 pr-3 text-sm text-gray-900"><%= resource.resource_name %></td>
                            <td class="whitespace-nowrap px-3 py-2 text-sm text-gray-500 max-w-[200px] truncate" title="<%= resource.status_page %>"><%= resource.status_page %></td>
                            <td class="whitespace-nowrap px-3 py-2 text-sm text-gray-600"><%= resource.categories.join(', ') %></td>
                            <td class="relative whitespace-nowrap py-2 pl-3 pr-2 text-right text-sm font-medium sm:pr-0">
                              <div class="inline-flex items-center gap-2">
                                <button type="button" onclick="editResource('<%= resource.resource_name %>', '<%= resource.status_page %>')" aria-label="Edit <%= resource.resource_name %>" class="p-1 text-gray-600 hover:text-yellow-400 focus:outline-none">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                                  </svg>
                                </button>
                                <button type="button" onclick="deleteResourceGlobal('<%= resource.resource_name %>')" aria-label="Delete <%= resource.resource_name %>" class="p-1 text-gray-600 hover:text-red-500 focus:outline-none">
                                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                  </svg>
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      <% } else { %>
                        <tr>
                          <td class="py-2 pl-2 pr-3 text-sm text-gray-500" colspan="4">No resources available.</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
                <!-- Pagination Controls -->
                <div class="mt-4 flex items-center justify-between">
                  <div class="text-sm text-gray-600">
                    <span id="pagination-info"></span>
                  </div>
                  <div class="flex gap-2">
                    <button id="pagination-prev" type="button" onclick="prevResourcePage()" class="rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                      Previous
                    </button>
                    <div id="pagination-numbers" class="flex gap-1">
                    </div>
                    <button id="pagination-next" type="button" onclick="nextResourcePage()" class="rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm font-medium text-gray-700 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                      Next
                    </button>
                  </div>
                </div>
              </div>

              <!-- Import CSV Section -->
              <div class="mt-8 mb-8">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-bold text-gray-900">Bulk Import</h4>
                  <button type="button" onclick="openImportModal()" title="Import CSV" aria-label="Import CSV" class="px-3 py-2 rounded-md text-gray-600 text-sm font-medium hover:text-primary hover:bg-blue-50 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline mr-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0l3 3m-3-3l-3 3M6.75 19.5a4.5 4.5 0 01-1.41-8.775 5.25 5.25 0 0110.233-2.33A3 3 0 0116.5 19.5H6.75z" />
                    </svg>
                    Import CSV
                  </button>
                </div>
                <p class="text-xs text-gray-600 mb-4">Import categories and resources from a CSV file. <a href="#" onclick="downloadCSVTemplate(event)" class="text-blue-500 hover:text-blue-600 underline">Download template</a></p>
              </div>

              <!-- Check Errors -->
              <div class="mt-8">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-sm font-bold text-gray-900">Errors</h4>
                  <div class="flex items-center gap-2">
                    <button id="refresh-errors-btn" type="button" title="Refresh Errors" aria-label="Refresh Errors" class="p-2 rounded-md bg-white text-gray-600 border border-slate-200 hover:bg-slate-50">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 10a9 9 0 0115.464-4.464M21 14a9 9 0 01-15.464 4.464" />
                      </svg>
                    </button>
                    <button id="clear-errors-btn" type="button" title="Clear All Errors" aria-label="Clear All Errors" class="p-2 rounded-md bg-white text-gray-600 border border-slate-200 hover:bg-slate-50">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-1.5 12.75a2.25 2.25 0 01-2.25 2.25H7.5a2.25 2.25 0 01-2.25-2.25L3.75 7.5M10.5 11.25v6M13.5 11.25v6M4.5 7.5h15" />
                      </svg>
                    </button>
                  </div>
                </div>
                <div class="overflow-x-auto">
                  <table id="check-errors-table" class="min-w-full divide-y divide-gray-300">
                    <thead>
                      <tr>
                        <th class="py-2 pl-2 pr-3 text-left text-xs font-medium text-gray-500 uppercase">Time</th>
                        <th class="py-2 px-3 text-left text-xs font-medium text-gray-500 uppercase">Resource</th>
                        <th class="py-2 px-3 text-left text-xs font-medium text-gray-500 uppercase">Check Type</th>
                        <th class="py-2 pr-2 text-left text-xs font-medium text-gray-500 uppercase">Error</th>
                      </tr>
                    </thead>
                    <tbody id="check-errors-table-body" class="divide-y divide-gray-200">
                        <tr>
                          <td class="py-2 pl-2 pr-3 text-sm text-gray-500" colspan="6">No errors loaded. Click the refresh icon.</td>
                        </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <!-- Edit Modal -->
    <div id="edit-modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
          <div
            class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-7xl sm:p-6">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Edit Resource</h3>
              <div class="mt-4">
                <!-- Dynamic Grid layout: Single column by default, two columns when API explorer is shown -->
                <div id="edit-modal-grid" class="grid grid-cols-1 gap-6">
                  <!-- Left Column: Form Fields -->
                  <div class="space-y-4">
                    <input type="hidden" id="edit-original-name">
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Resource Name</label>
                      <input type="text" id="edit-name"
                        class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Status Page URL</label>
                      <div class="flex gap-2">
                        <input type="text" id="edit-url"
                          class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <button type="button" id="edit-analyze-api-btn" onclick="analyzeEditAPI()" 
                          class="mt-2 rounded-md bg-blue-500 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 hidden">
                          Analyze
                        </button>
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Categories</label>
                      <div class="mt-2 space-y-2 max-h-40 overflow-y-auto border p-2 rounded-md">
                        <% allCategories.forEach(cat=> { %>
                          <div class="flex items-center">
                            <input id="edit-cat-<%= cat %>" name="edit-categories" type="checkbox" value="<%= cat %>"
                              class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                            <label for="edit-cat-<%= cat %>" class="ml-3 text-sm leading-6 text-gray-900">
                              <%= cat %>
                            </label>
                          </div>
                          <% }) %>
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Check Type</label>
                      <select id="edit-check-type" class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <option value="api">API (JSON)</option>
                        <option value="scrape">Web Scrape (keywords)</option>
                        <option value="heartbeat">Heartbeat (HTTP 200)</option>
                      </select>
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Scrape Keywords (comma separated)</label>
                      <input type="text" id="edit-scrape-keywords" placeholder="e.g. All Systems Operational, Operational"
                        class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                  </div>

                  <!-- Right Column: API Field Explorer -->
                  <div id="edit-api-config-section" class="hidden">
                    <!-- <label class="block text-sm font-medium leading-6 text-gray-900 mb-2">API Field Explorer</label> -->
                    <div class="border rounded-lg bg-gray-50 h-full" style="min-height: 500px;">
                      <div id="edit-api-loading" class="flex items-center justify-center h-full text-sm text-gray-600 hidden">
                        <div class="text-center">
                          <svg class="animate-spin h-8 w-8 mx-auto mb-2 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                          </svg>
                          <p>Analyzing API structure...</p>
                        </div>
                      </div>
                      <div id="edit-api-fields" class="h-full overflow-auto"></div>
                      <div id="edit-api-error" class="text-sm text-red-600 p-4 hidden"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
              <button type="button" onclick="saveEdit()"
                class="inline-flex w-full justify-center rounded-md bg-green-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:col-start-2">Save</button>
              <button type="button" onclick="closeEditModal()"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Resource Modal -->
    <div id="add-modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
          <div
            class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-7xl sm:p-6">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Add New Resource</h3>
              <div class="mt-4">
                <!-- Dynamic Grid layout: Single column by default, two columns when API explorer is shown -->
                <div id="add-modal-grid" class="grid grid-cols-1 gap-6">
                  <!-- Left Column: Form Fields -->
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Resource Name</label>
                      <input type="text" id="add-name" autocomplete="off"
                        class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Check Type</label>
                      <select id="add-check-type" class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <option value="api">API (JSON)</option>
                        <option value="scrape">Web Scrape (keywords)</option>
                        <option value="heartbeat">Heartbeat (HTTP 200)</option>
                      </select>
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Scrape Keywords (comma separated)</label>
                      <input type="text" id="add-scrape-keywords" placeholder="e.g. All Systems Operational, Operational"
                        class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Status Page URL</label>
                      <div class="flex gap-2">
                        <input type="text" id="add-url" autocomplete="off"
                          class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        <button type="button" id="add-analyze-api-btn" onclick="analyzeAddAPI()" 
                          class="mt-2 rounded-md bg-blue-500 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 hidden">
                          Analyze
                        </button>
                      </div>
                    </div>
                    <div>
                      <label class="block text-sm font-medium leading-6 text-gray-900">Categories</label>
                      <div class="mt-2 space-y-2 max-h-40 overflow-y-auto border p-2 rounded-md">
                        <% allCategories.forEach(cat=> { %>
                          <div class="flex items-center">
                            <input id="add-cat-<%= cat %>" name="add-categories" type="checkbox" value="<%= cat %>"
                              class="h-4 w-4 rounded border-indigo-600 text-indigo-600 focus:ring-indigo-600">
                            <label for="add-cat-<%= cat %>" class="ml-3 text-sm leading-6 text-gray-900">
                              <%= cat %>
                            </label>
                          </div>
                          <% }) %>
                      </div>
                    </div>
                  </div>

                  <!-- Right Column: API Field Explorer -->
                  <div id="add-api-config-section" class="hidden">
                    <!-- <label class="block text-sm font-medium leading-6 text-gray-900 mb-2">API Field Explorer</label> -->
                    <div class="border rounded-lg bg-gray-50 h-full" style="min-height: 500px;">
                      <div id="add-api-loading" class="flex items-center justify-center h-full text-sm text-gray-600 hidden">
                        <div class="text-center">
                          <svg class="animate-spin h-8 w-8 mx-auto mb-2 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                          </svg>
                          <p>Analyzing API structure...</p>
                        </div>
                      </div>
                      <div id="add-api-fields" class="h-full overflow-auto"></div>
                      <div id="add-api-error" class="text-sm text-red-600 p-4 hidden"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
              <button type="button" onclick="saveNewResource()"
                class="inline-flex w-full justify-center rounded-md bg-green-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:col-start-2">Add</button>
              <button type="button" onclick="closeAddModal()"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Category Modal -->
    <div id="add-category-modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
          <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Add Category</h3>
              <div class="mt-4">
                <label class="block text-sm font-medium leading-6 text-gray-900">Category Name</label>
                <input type="text" id="modal-new-category-name" autocomplete="off"
                  class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
              </div>
            </div>
            <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
              <button type="button" onclick="saveNewCategory()"
                class="inline-flex w-full justify-center rounded-md bg-green-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:col-start-2">Add</button>
              <button type="button" onclick="closeAddCategoryModal()"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Import CSV Modal -->
    <div id="import-modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
          <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">
            <div>
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title">Import Categories & Resources</h3>
              <div class="mt-4 space-y-4">
                <div class="text-sm text-gray-600 bg-blue-50 p-3 rounded-md">
                  <p class="font-medium mb-2">CSV Format:</p>
                  <p class="font-mono text-xs">category,resource_name,status_page,check_type,scrape_keywords</p>
                  <p class="mt-2">check_type: api, scrape, or heartbeat</p>
                  <p>scrape_keywords: comma-separated values (optional)</p>
                </div>
                <div>
                  <label class="block text-sm font-medium leading-6 text-gray-900">Select CSV File</label>
                  <input type="file" id="import-csv-file" accept=".csv" 
                    class="mt-2 block w-full rounded-md border-0 px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
                <div id="import-preview" class="text-sm text-gray-600"></div>
              </div>
            </div>
            <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
              <button type="button" onclick="importCSV()"
                class="inline-flex w-full justify-center rounded-md bg-blue-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:col-start-2">Import</button>
              <button type="button" onclick="closeImportModal()"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script src="/admin.js"></script>
</body>

</html>